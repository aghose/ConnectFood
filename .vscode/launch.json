{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node",
            "type":  "node",
            "request": "attach",
            "port": 9229,
            "outFiles": [
                "${workspaceRoot}\\server\\dist\\**\\*.js"
            ]
        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "url": "http://localhost:5000",
            "webRoot": "${workspaceRoot}",
            "trace": true,
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        },
        {
            "name": "Client-Only",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "sourceMaps": true,
            "trace": true,
            "webRoot": "${workspaceRoot}",
            "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "sourceMapPathOverrides": {
                "webpack:///C:*":"C:/*"
            }
        },
        {
            "name": "Server-Only",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npm",
            "windows": {
                "runtimeExecutable": "npm.cmd"
            },
            "runtimeArgs": [
                "run-script", "debug-server"
            ],
            "port": 5858,
            "outFiles": [
                "${workspaceRoot}\\server\\dist\\**\\*.js",
                "${workspaceRoot}\\client\\dist\\**\\*.js"
            ]
        }
    ],
    "compounds": [
        { 
            "name": "Hybrid",
            "configurations": ["Node", "Chrome"]
        }
    ]    
}